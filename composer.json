{
    "name": "seebaermichi/monthly-calendar",
    "description": "A package which provides a monthly calendar with days and events depending on given months and events.",
    "keywords": [
        "seebaermichi",
        "monthly-calendar"
    ],
    "homepage": "https://github.com/seebaermichi/monthly-calendar",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Becker",
            "email": "micha.becker79@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Seebaermichi\\MonthlyCalendar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Seebaermichi\\MonthlyCalendar\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
